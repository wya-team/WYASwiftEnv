platform :ios, '8.0'
use_frameworks!
target 'WYASwiftEnv' do
# 网络请求库AF作者新作
pod 'Alamofire','~>4.6.0'
# 图片加载缓存类似SDWebImage
pod 'Kingfisher','~>4.6.1'
# 函数式编程
pod 'RxSwift','~>4.1.1'
pod 'RxCocoa','~>4.1.1'
# 提示框
pod 'SVProgressHUD','~>2.2.2'
pod 'MJRefresh','~>3.1.15.1'
# 数据库操作
pod 'SQLite.swift','~>0.11.4'
# 分页控制器
pod 'SGPagingView','~>1.3.5'
# 视频播放器
pod 'BMPlayer','~>1.0.1'
# layout类似于Masonry
pod 'SnapKit','~>4.0.0'
# 全局滑动手势
pod 'FDFullscreenPopGesture','~>1.1'

end
