platform :ios, '8.0'
use_frameworks!
target 'WYASwiftEnv' do
# 网络请求库AF作者新作
pod 'Alamofire'
# 图片加载缓存类似SDWebImage
pod 'Kingfisher'
# 函数式编程
pod 'RxSwift'
pod 'RxCocoa'
# 提示框
pod 'SVProgressHUD'
pod 'MJRefresh'
# 数据库操作
pod 'SQLite.swift'
# 分页控制器
pod 'SGPagingView'
# 视频播放器
pod 'BMPlayer'
# layout类似于Masonry
pod 'SnapKit'
# 全局滑动手势
pod 'FDFullscreenPopGesture'

end
